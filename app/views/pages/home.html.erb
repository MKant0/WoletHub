        <h5 class="text-uppercase">Encuéntranos</h5>
        <ul class="list-unstyled mb-0 d-flex">
          <li class="mx-2"><%= image_tag "instagram.svg", class: "icon-color" %></li>
          <li class="mx-2"><%= image_tag "twitter.svg", class: "icon-color" %></li>
          <li class="mx-2">
            <%= link_to "https://github.com/MKant0/WoletHub", class: "github-link" do %>
              <%= image_tag "github.svg", class: "icon-color" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog vertical-alignment-helper">
    <div class="modal-content-pay vertical-align-center">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-6">
            <div class="container-custom-outline">
                <div class="container-free">
                  <div class="card-info text-center py-2">
                    <div>
                      <p>Basico</p>
                      <p class="card-valor"><em>0 CLP</em></p>
                    </div>
                    <%= link_to "Empezar", new_user_session_path, class: "btn btn-outline-primary me-2 btn-empezar-free" %>
                    <hr>
                    <p class="card-description text-left">
                      <ul>
                        <li>Puedes tener hasta 2 bancos</li>
                        <li>20 transacciones mensuales gratis</li>
                        <li>Cuentas bancarias ilimitadas</li>
                      </ul>
                    </p>
                  </div>
                </div>
            </div>
          </div>
          <div class="col-6">
            <div class="container-custom-bg">
              <div class="container-pay">
                <div class="container-pay">
                  <div class="card-info-pay text-center py-2">
                    <div>
                      <p>Recomendado</p>
                      <p class="card-valor"><em>19.900 CLP/año</em></p>
                    </div>
                     <%= link_to "Empezar", new_user_session_path, class: "btn btn-outline-primary me-2 btn-empezar-pay" %>
                     <hr>
                     <p class="card-description-pay text-left px-2">
                      <ul>
                        <li>Bancos ilimitados</li>
                        <li>Transacciones mensuales ilimitadas</li>
                        <li>Acceso a todo el contenido</li>
                      </ul>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
